{
  "name": "thingtalk",
  "version": "1.4.1",
  "description": "ThingTalk Just-In-Time Compiler, Library and Runtime",
  "license": "GPL-3.0+",
  "repository": "https://github.com/Stanford-Mobisocial-IoT-Lab/ThingTalk",
  "author": "Stanford University Mobile and Social Computing Lab",
  "contributors": [
    {
      "name": "Giovanni Campagna",
      "email": "gcampagn@cs.stanford.edu"
    }
  ],
  "main": "index.js",
  "dependencies": {
    "adt": "~0.7.2",
    "byline": "^5.0.0",
    "consumer-queue": "^1.0.0",
    "smtlib": "^0.1.1"
  },
  "devDependencies": {
    "argparse": "^1.0.10",
    "coveralls": "^3.0.0",
    "csv": "^5.1.1",
    "deep-equal": "^1.0.1",
    "eslint": "^5.3.0",
    "nyc": "^13.1.0",
    "pegjs": "~0.10.0",
    "q": "^1.5.1",
    "seedrandom": "^2.4.4"
  },
  "scripts": {
    "regen-grammar": "pegjs --allowed-start-rules input,program,type_ref,permission_rule ./lib/grammar.pegjs",
    "regen-meta-grammar": "pegjs ./tools/meta-sentence-generator/grammar.pegjs",
    "regen-nn-grammar": "node ./tools/generate_parser.js ./lib/nn_grammar.js '$input' > lib/nn_output_parser.js",
    "compile-all-sentence-grammars": "make -C languages/",
    "update-pot": "xgettext -f po/POTFILES -x po/POTFILES.skip -o po/${npm_package_name}.pot --from-code UTF-8 --package-name ${npm_package_name} --package-version ${npm_package_version}",
    "update-po": "for i in po/*.po ; do msgmerge -U $i po/${npm_package_name}.pot ; done",
    "compile-mo": "for i in po/*.po ; do msgfmt $i -o po/`basename $i .po`.mo ; done",
    "lint": "eslint ./lib",
    "test": "nyc node ./test/test_all",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "yarn compile-mo && yarn regen-grammar && yarn regen-nn-grammar && yarn regen-meta-grammar && yarn compile-all-sentence-grammars"
  },
  "nyc": {
    "exclude": [
      "lib/grammar.js",
      "test/**",
      "coverage/**"
    ]
  }
}
